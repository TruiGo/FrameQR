<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
   	<LinearLayout  android:id="@+id/titleView"
		android:background="@drawable/popwindow_title_bg" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
		<TextView android:id="@+id/title" android:gravity="center"
			android:textColor="@color/text_blue" android:textSize="19sp"
			android:singleLine="true" android:ellipsize="end" android:paddingTop="18dp"
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="14dp"
			android:layout_marginTop="3dp" android:layout_marginBottom="3dp"/>
	</LinearLayout>
    <ListView 
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleView"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</RelativeLayout>