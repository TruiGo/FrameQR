<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	style="@style/application_bg" android:orientation="vertical">
	<include 
	    layout="@layout/web_app_title_layout"/>
	<org.apache.cordova.LinearLayoutSoftKeyboardDetect
		android:id="@+id/content" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="0"
		android:orientation="vertical">
		<WebView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/webview" />
	</org.apache.cordova.LinearLayoutSoftKeyboardDetect>

</LinearLayout>