<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/AlipayCardApply"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/CardApply">
		<!-- 显示不同页面title的text -->
		<RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
				       	android:layout_marginTop="10dp"
				       	android:layout_marginRight="10dp"
				       	android:layout_marginLeft="10dp"
						android:id="@+id/CardCueTextDisplayArea">
						<TextView
				       		style="@style/AlipayNormalText320x480"
				       		android:id="@+id/CardApplyCueText"
				       		>
				   		</TextView>
				   		<TextView
				       		style="@style/AlipayNormalText320x480"
				       		android:id="@+id/CardApplyCueText1"
				       		android:layout_toRightOf="@+id/CardApplyCueText"
				       		android:visibility="gone">
				   		</TextView>
				   		<TextView
				       		style="@style/AlipayNormalText320x480"
				       		android:id="@+id/CardApplyCueText2"
				       		android:layout_toRightOf="@+id/CardApplyCueText1"
				       		android:visibility="gone">
				   		</TextView>
				   		<TextView
				       		style="@style/AlipayNormalText320x480"
				       		android:layout_marginTop="3dp"
				       		android:id="@+id/CardApplyCueText3"
				       		android:layout_below="@+id/CardApplyCueText"
				       		android:visibility="gone">
				   		</TextView>
			</RelativeLayout>
			<!--<ImageView android:layout_below="@id/CardCueTextDisplayArea" style="@style/AlipayCutoffLineStyle320x480"/>-->
			<!-- 填写申请表页面 -->
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/CardApplyMainView"
			android:visibility="gone"
			android:layout_below="@id/CardCueTextDisplayArea">
		<RelativeLayout
	        style="@style/AlipayInputCanvas320x480"		   
			android:id="@+id/CardApplyAccountCanvas"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="8dp">
	        <TextView
				android:id="@+id/CardApplyAccountTitle"
				android:text="@string/CardApplyUserName"
				android:layout_width="100dp"
				style="@style/AlipayInputLongNameText320x480">
			</TextView>
			<TextView
	            android:id="@+id/CardApplyAccount"
	            android:layout_toRightOf="@id/CardApplyAccountTitle"
	            style="@style/AlipayInputContentText320x480">
	        </TextView>
		</RelativeLayout>
		<!-- <ImageView android:layout_below="@id/CardApplyAccountCanvas" style="@style/AlipayCutoffLineStyle320x480"/> -->
		
	    <LinearLayout
		android:layout_below="@id/CardApplyAccountCanvas"
	    android:id="@+id/CardApplyRealNameCanvas"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:addStatesFromChildren="true"
		android:gravity="center_vertical"
		android:paddingRight="0dip"
		android:background="@drawable/alipay_input"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp">
        <TextView
           style="@style/AlipayInputText"
           android:text="@string/ApplyRealNameTitleStr"
           android:textAppearance="?android:attr/textAppearanceLargeInverse"
        />
        <EditText
       	   android:id="@+id/CardApplyRealName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:singleLine="true"
           android:background="@null"
           android:textSize="16dp"
           android:textColor="@color/TextColorBlack"
		   android:layout_marginRight="5dp"
        />
    </LinearLayout>	  

	   <!--  <ImageView android:layout_below="@id/CardApplyRealNameCanvas" style="@style/AlipayCutoffLineStyle320x480"/> -->
	 <LinearLayout
		android:layout_below="@id/CardApplyRealNameCanvas"
	    android:id="@+id/CardApplyIDNOCanvas"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:addStatesFromChildren="true"
		android:gravity="center_vertical"
		android:paddingRight="0dip"
		android:background="@drawable/alipay_input"
		android:layout_margin="10dp">
        <TextView
           style="@style/AlipayInputText"
           android:text="@string/ApplyIdentifyNumberStr"
           android:textAppearance="?android:attr/textAppearanceLargeInverse"
        />
        <EditText
       	   android:id="@+id/CardApplyIDNO"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:singleLine="true"
           android:background="@null"
           android:textSize="16dp"
           android:textColor="@color/TextColorBlack"
		   android:layout_marginRight="5dp"
        />
    </LinearLayout>	  

	     <!--<ImageView android:layout_below="@id/CardApplyIDNOCanvas" style="@style/AlipayCutoffLineStyle320x480"/>-->
	    </RelativeLayout>
	    <!-- 申请开通第一个页面 -->
		<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/CardStatView"
		android:layout_below="@id/CardCueTextDisplayArea">
		<RadioGroup
			android:id="@+id/CardApplyBankName"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:checkedButton="@+id/CardApllyCSBank">
			<RadioButton
			    style="@style/AlipayRadioButtonStyle320x480"
			    android:id="@+id/CardApllyCSBank"
			    android:layout_marginLeft="15dp"/>
			<!-- add bank radio button here -->
		</RadioGroup>
		</RelativeLayout>
		<!-- 申请协议界面 -->
		<RelativeLayout
			android:id="@+id/cardProtocol"
			android:padding="15dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_below="@id/CardCueTextDisplayArea">
			<TextView
				android:id="@+id/cardProtocolText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				style="@style/AlipayNormalText320x480">
			</TextView>
			<TextView
				android:id="@+id/cardProtocolText1"
				android:layout_below="@+id/cardProtocolText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				style="@style/AlipayNormalText320x480">
			</TextView>
			<TextView
				android:id="@+id/cardProtocolText2"
				android:layout_below="@+id/cardProtocolText1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				style="@style/AlipayNormalText320x480">
			</TextView>
		</RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/CardApplyDetailButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
		android:layout_below="@id/CardApply"
        style="@style/AlipayNormalButtonStyle320x480">
    </Button>
</RelativeLayout>

