<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/SMSTransferGetPayPassword"
  android:background="@drawable/application_bg">
	<include layout="@layout/alipay_subtitle_320_480" />
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/AlipaySubTitle"
		android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        android:background="@drawable/application_bg_white"
		android:id="@+id/SMSTransferONRetrieveAndInputSmsCheckCodeView"
		android:visibility="visible">
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">			
		    <TextView 
		        android:id="@+id/InputSmsCheckCodeNotice"
				style="@style/AlipayTextInfo320x480"
				android:text="@string/InputSmsCheckCodeNoticeText"
				android:layout_marginLeft="10dp"
				android:textSize="14dp"
		    />
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/InputSmsCheckCodeNotice"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="10dp"
			android:paddingRight="20dp"
			android:id="@+id/SMSTransferONInputSmsCheckCodeLayout"
			android:gravity="center_vertical"
			>	
			<ImageView
				android:id="@+id/SMSTransferONSmsCheckCodeImage"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_alignParentRight="true"/>
			<EditText
				android:id="@+id/SMSTransferONSmsCheckCodeEditText"
				style="@style/AlipayInputEditText320x480"
				android:layout_toLeftOf="@id/SMSTransferONSmsCheckCodeImage"
				android:layout_marginLeft="10dp"/>
		</RelativeLayout>
		<Button
			android:id="@+id/GetSMSButton"
		    style="@style/AlipayNormalButtonStyle320x480"
			android:layout_below="@id/SMSTransferONInputSmsCheckCodeLayout"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:enabled="false"
			android:text="@string/GetSmsButtonText">
		</Button>
	</RelativeLayout>
  	</ScrollView>
  	
  	<RelativeLayout
  	    android:id="@+id/PrepareReplySMSLayout"
  	    android:layout_below="@id/AlipaySubTitle"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:paddingTop="10dp"
		android:background="@drawable/application_bg_white"
		android:visibility="gone">
			<TextView 
			     style="@style/AlipayTextInfo320x480"
			     android:layout_marginLeft="10dp"
				 android:textSize="14dp"
				 android:id="@+id/GetSMSResultNoticeView"
				 android:text="@string/GetSMSResultNoticeText"
				 android:layout_marginTop="10dp"/>
		   <RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/GetSMSResultNoticeView"
			android:id="@+id/RepeatSendLayout">
			      <TextView 
			          android:id="@+id/repeatSendText"
                       style="@style/AlipayTextInfo320x480"
			           android:layout_marginLeft="10dp"
				       android:textSize="14dp"
				       android:text="@string/RepeatSendText"
				       android:layout_marginTop="10dp"/>
			      <Button
				       android:id="@+id/RepeatSendButton"
				       style="@style/AlipayNormalButtonStyle320x480"
				       android:textSize="14dp"
				       android:layout_width="120dp"
				       android:layout_marginLeft="10dp"
				       android:layout_marginRight="10dp"
				       android:layout_toRightOf="@id/repeatSendText"
				       android:layout_alignParentRight="true"
				       android:text="**秒后重新 发送"/>
			</RelativeLayout>	
			<ImageView
				android:id="@+id/DevideLineSMSLayout"
			    android:layout_below="@id/RepeatSendLayout"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_margin="10dp"
				android:layout_marginTop="20dp"
				android:src="@drawable/line3">
	        </ImageView>
	        <TextView 
	            android:layout_below="@id/DevideLineSMSLayout"
	            style="@style/AlipayTextInfo320x480"
	            android:id="@+id/ReplySMSNoticeView"
	            android:layout_margin="10dp"
	            android:text="@string/ReplySMSNoticeText"
	            android:textSize="14dp"
	        />
	        <Button
			    android:layout_below="@id/ReplySMSNoticeView"
				android:id="@+id/GoSettingPayPassWordButton"
				style="@style/AlipayNormalButtonStyle320x480"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="5dp"
				android:text="@string/GoSettingPayPassWordButoonText">
	       </Button>	
	</RelativeLayout>	

</RelativeLayout>