<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   	<item android:state_enabled="false" android:drawable="@drawable/unavailable_to_back"/>
    <!-- Pressed -->
    <item android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/unavailable_to_back" />
    
    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/unavailable_to_back" />
    
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/available_to_back" />
</selector>