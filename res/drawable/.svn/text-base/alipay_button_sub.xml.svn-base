<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:state_enabled="false" android:drawable="@drawable/btn_gray_bg" />
    
    <!-- Pressed -->
    <item android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/btn_blue_bg_selected" />
    
    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/btn_blue_bg_selected" />
    
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/btn_blue_bg" />
</selector>