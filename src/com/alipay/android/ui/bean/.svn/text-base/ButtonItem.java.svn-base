package com.alipay.android.ui.bean;

public class ButtonItem {
	private String mText;
	private String mTextExtra;
	private int mTextExtraColor = -1;

	private int mAction;
	
	public ButtonItem setText(String text) {
		mText = text;
		return this;
	}
	
	public String getText() {
		return mText;
	}
	
	public ButtonItem setTextExtra(String textExtra) {
		mTextExtra = textExtra;
		return this;
	}
	
	public String getTextExtra() {
		return mTextExtra;
	}
	
	public ButtonItem setAction(int action) {
		mAction = action;
		return this;
	}
	
	public int getAction() {
		return mAction;
	}

	public int getmTextExtraColor() {
		return mTextExtraColor;
	}

	public ButtonItem setmTextExtraColor(int mTextExtraColor) {
		this.mTextExtraColor = mTextExtraColor;
		return this;
	}
}
